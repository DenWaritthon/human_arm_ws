<?xml version="1.0"?>
<robot name="7DOF_ROBOT">
    <!-- World -->
    <link name="world"/>

    <!-- World link Base -->
    <joint name="fixed" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="world"/>
        <child link="Base"/>
